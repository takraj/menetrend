@{
    ViewBag.Title = "Menetrend táblázat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="browser-header">
    <span class="browser-header-badge">
        <span class="route-logo" style="background: #00D900; color: #FFFFFF; font-size: 32px; width: 96px;">
            <div>
                <div class="route-logo-content">
                    <div>
                        M4
                    </div>
                </div>
            </div>
        </span>
    </span>
    <span class="browser-header-content">
        <div class="browser-header-content-line1">metró</div>
        <div class="browser-header-content-line2">indulási időpontok</div>
    </span>
</div>

<h2 class="stop-name-as-header">Keleti pályaudvar</h2>

@Html.Partial("_DirectionSelector")
@Html.Partial("_Timetable")

@section sidebar {
    @Html.Partial("_BrowserInputs")
}

@section before_scripts {
    @Scripts.Render("~/js/fancytree.js")
}

@section scripts {
    @Html.Partial("_ScriptOfBrowserInputs")
}