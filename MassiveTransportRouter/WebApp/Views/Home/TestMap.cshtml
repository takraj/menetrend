@model IEnumerable<MTR.WebApp.Common.ViewModels.VMDL_RouteInstruction>
@using System.Web.Script.Serialization
@{
    ViewBag.Title = "Teszt oldal";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>@ViewBag.Message</h2>
</hgroup>

<article>
    <div id="map_canvas" style="width: 650px; height: 650px"></div>
</article>

<aside>
    @using (Html.BeginForm())
    {
        <h3>Opciók</h3>
        <br />
        <div class="ui-widget">
            <label for="stopFrom">Honnan: </label>
            <input name="stopFrom" id="stopFrom" />
        </div>
        <br />
        <div class="ui-widget">
            <label for="stopTo">Hova: </label>
            <input name="stopTo" id="stopTo" />
        </div>
        <br />
        <input type="submit" value="Keresés" />
    }
    <ul>
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
    </ul>
</aside>

@section Scripts {
    <script type="text/javascript"
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDx0BPr9sy2ndglbnwYrwrMzXmU0fDoSG8&sensor=true">
    </script>

    @Scripts.Render("~/bundles/maptools");

    <script type="text/javascript">
        window.onunload = function () { }
        window.onload = function () {
            // CreateMap
            MTR.MapTools.createMap("map_canvas");

            // Add Waypoints + Markers
            @Html.Raw("var markers = " + new JavaScriptSerializer().Serialize(Model) + ";")
            markers.forEach(function (marker, i) {
                var description = "#" + (i + 1) + " -- " + marker.stop.StopName;
                if ((i != 0) && (i != markers.length - 1)) {
                    if (marker.isTransfer) {
                        description = description + "<br /><strong>Átszállás</strong>";
                    } else {
                        description = description + "<br />Járat: <strong>" + marker.routeName + "</strong>";
                    }
                }

                if (i == markers.length - 1) {
                    description = description + "<br />Érkezés: <strong>" + marker.timeString + "</strong>";
                } else {
                    description = description + "<br />Indulás: <strong>" + marker.timeString + "</strong>";
                }
                MTR.MapTools.addMarkerToMap(marker.stop.StopLatitude, marker.stop.StopLongitude, description);
            });

            // draw path
            MTR.MapTools.drawPath();

            // setup infoWindows
            MTR.MapTools.setupInfoWindows();
        }
    </script>

    @Scripts.Render("~/bundles/jquery");
    @Scripts.Render("~/bundles/jqueryui");

    <script>
        $(function () {
            @Html.Raw("var availableTags = " + new JavaScriptSerializer().Serialize(ViewBag.StopNames) + ";")

            $("#stopFrom").autocomplete({
                source: availableTags
            });
            $("#stopTo").autocomplete({
                source: availableTags
            });
        });
    </script>
}