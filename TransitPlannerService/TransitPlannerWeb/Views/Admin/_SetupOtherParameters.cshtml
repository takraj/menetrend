@model TransitPlannerWeb.ViewModels.SetupOtherParametersAdminModel
@using (Html.BeginForm("SetOtherSettings", "Admin", FormMethod.Post, new { id = "other-settings-form", onsubmit = "return validate_other_settings()" }))
{
    <fieldset class="other-settings">
        <legend>Egyéb beállítások</legend>
        <table>
            <thead>
                <tr>
                    <th class="other-settings-key">Kulcs</th>
                    <th class="other-settings-value">Érték</th>
                    <th class="other-settings-unit"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Algoritmus
                    </td>
                    <td class="contains-textfield">
                        <select name="algorithm">
                            @foreach (var algorithm in Model.Algorithms)
                            {
                                if (algorithm.IsSelected)
                                {
                                    <option value="@Html.Raw(algorithm.Name)" selected="selected">@Html.Raw(algorithm.Name)</option>
                                }
                                else
                                {
                                    <option value="@Html.Raw(algorithm.Name)">@Html.Raw(algorithm.Name)</option>
                                }
                            }
                        </select>
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td>Normál gyaloglási sebesség
                    </td>
                    <td class="contains-textfield">
                        <input type="text" name="normal_walkspeed" id="other-setting-normal-walkspeed" value="@Html.Raw(Model.WalkingSpeeds.Normal.ToString(System.Globalization.CultureInfo.InvariantCulture))" />
                    </td>
                    <td>km/h</td>
                </tr>
                <tr>
                    <td>Lassú gyaloglási sebesség
                    </td>
                    <td class="contains-textfield">
                        <input type="text" name="slow_walkspeed" id="other-setting-slow-walkspeed" value="@Html.Raw(Model.WalkingSpeeds.Slow.ToString(System.Globalization.CultureInfo.InvariantCulture))" />
                    </td>
                    <td>km/h</td>
                </tr>
                <tr>
                    <td>Gyors gyaloglási sebesség
                    </td>
                    <td class="contains-textfield">
                        <input type="text" name="fast_walkspeed" id="other-setting-fast-walkspeed" value="@Html.Raw(Model.WalkingSpeeds.Fast.ToString(System.Globalization.CultureInfo.InvariantCulture))" />
                    </td>
                    <td>km/h</td>
                </tr>
                <tr>
                    <td>Fel és leszállási idő
                    </td>
                    <td class="contains-textfield">
                        <input type="text" name="getonoff_time" id="other-setting-getonoff-time" value="@Html.Raw(Model.GetOnOffTime.ToString())" />
                    </td>
                    <td>perc</td>
                </tr>
            </tbody>
        </table>
        <div>
            <button class="submit-button" type="submit">Mentés</button>
        </div>
    </fieldset>
}